@model EditModelFormModel

@{ ViewData["Title"] = "Edit Model"; }

<div class="container">
    <div class="row">

        <div class="card col-6 col-lg-3 game-card">
            <img src="@Model.ImageUrl"
                 class="card-img-top img-fluid card-image rounded mt-5" data-toggle="tooltip"
                 data-placement="bottom" title="@Model.Name">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">@Model.Name</li>
                </ul>
            </div>
        </div>

        <div class=" col-md-8 com-sm-12">
            <h2 class="heading-margin" text-center>@ViewBag.Title</h2>
            <form method="post">
                <input asp-for="Id" value="@Model.Id" readonly hidden>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Add model name...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MakeId">Make</label>
                    <select asp-for="MakeId" class="form-control">
                        @foreach (var carModel in Model.Makes)
                        {
            <option value="@carModel.Id">@carModel.Name</option>
}
                    </select>
                    <span asp-validation-for="MakeId" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image Url</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Add image Url...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success" value="Add">Edit</button>
            </form>
        </div>
    </div>
</div>
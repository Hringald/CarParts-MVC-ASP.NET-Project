@model ICollection<PartCategoryViewModel>;
@{
    ViewBag.Title = "Choose Make";
}
@using Microsoft.AspNetCore.Identity;
@using Car_Parts.Data.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <link rel="stylesheet" href="~/css/carMenu.css">
    <h1 style="text-align:center">Choose from the available makes:</h1>

    <div class="row mt-2 mb-4">
        @foreach (var make in Model)
        {
            <div class="col-6 col-xl-1 mb-5 mt-5 ml-4 mr-4" >
                <a asp-controller="Parts" asp-action="AddPart" asp-route-Make="@make.Name">
                    <img style="width:90px;max-width:90px;height:90px;max-height:90px" src="@make.ImageUrl"
                         class="card-img-top img-fluid card-image rounded" data-toggle="tooltip"
                         data-placement="bottom" title="@make.Name">
                </a>
            </div>
        }
    </div>

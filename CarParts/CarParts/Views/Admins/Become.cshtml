@model AddAdminFormModel

@{ ViewBag.Title = "Become an Admin"; }

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 com-sm-12">
            <h2 class="heading-margin" text-center>@ViewBag.Title</h2>
            <p class="heading-margin" text-center>Become an admin in order to add more car makes and models</p>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" value="Become">Become Admin!</button>
            </form>
        </div>
    </div>
</div>
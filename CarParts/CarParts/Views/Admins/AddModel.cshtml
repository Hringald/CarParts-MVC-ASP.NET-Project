@using CarParts.Models.Parts
@model AddModelFormModel

@{
    ViewBag.Title = "Add Model";
}

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 com-sm-12">
            <h2 class="heading-margin" text-center>Add Model</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Add model name...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MakeId">Make</label>
                    <select asp-for="MakeId" class="form-control">
                        @foreach (var carModel in Model.Makes)
                        {
                            <option value="@carModel.Id">@carModel.Name</option>
                        }
                    </select>
                    <span asp-validation-for="MakeId" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image Url</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Add image Url...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" value="Add">Add</button>
            </form>
        </div>
    </div>
</div>
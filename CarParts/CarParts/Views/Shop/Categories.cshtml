@model ICollection<PartCategoryViewModel>;
@{ ViewBag.Title = "Categories"; }

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>



<section id="CarCatalogue">
    <div class="row mt-5 mb-5">
        @foreach (var category in Model)
        {
<div class=" col-6 col-lg-2 mr-4">
    <a asp-controller="Shop"
       asp-action="ShopPage"
       asp-route-Make="@ViewBag.Make"
       asp-route-Model="@ViewBag.Model"
       asp-route-Year="@ViewBag.Year"
       asp-route-Category="@category.Name">
        <img style="width: 150px; max-width: 150px; height: 150px; max-height: 150px " src="~/Images/Car/CarPartsCategories/@category.ImageUrl"
             data-toggle="tooltip"
             data-placement="bottom" title="@category.Name">
        <p style="text-align:center">@category.Name<p>
    </a>
</div>}
    </div>
</section>